<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group my-2">
    <%= form.text_field :first_name,class:"form-control",placeholder: "First Name" %>
  </div>

  <div class="field form-group my-2">
    <%= form.text_field :last_name ,class:"form-control",placeholder: "Last Name"%>
  </div>

  <div class="field form-group my-2">
   
    <%= form.text_field :email,class:"form-control",placeholder: "Email" %>
  </div>

  <div class="field form-group my-2">
   
    <%= form.text_field :phone,class:"form-control",placeholder: "Phone Number" %>
  </div>

  <div class="field form-group my-2">
   
    <%= form.text_field :category,class:"form-control",placeholder: "Category" %>
  </div class="field form-group">

  <div class="field form-group my-2">
    
    <%= form.text_field :address,class:"form-control",placeholder: "Address" %>
  </div>

  <div class="field form-group my-2">
    
    <%= form.number_field :user_id, id: :contact_user_id , class:"form-control",value: current_user.id , type: :hidden%>
  </div>

  <div>
    <%= form.submit class:"btn btn-dark mt-3" %>
  </div>
<% end %>
