



<div class="mt-4 mb-4 p-5 bg-success p-2 text-dark bg-opacity-50  rounded">
  <h1><%= @contact.first_name %> <%= @contact.last_name %></h1>
  <h4><%= @contact.category %></h4>
  <p> <%= @contact.email %> | <%= @contact.phone %></p>
  <p> <%= @contact.address %></p>

  <div >
  <%= link_to "Edit this contact", edit_contact_path(@contact), class:"btn btn-dark me-2" %>
  <%= link_to "Back to contacts", contacts_path, class:"btn btn-dark me-2" %>


  <%= button_to "Destroy this contact", @contact, class:"btn btn-danger", style:"margin-top: 10px",  method: :delete %>
</div>

</div>

